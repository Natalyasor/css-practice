<header class="header row g-0">
  <div class="col-3">
    {{> logo }}
  </div>

  <nav class="header_nav col-9">

    <div class="header-nav-right">
      {{>nav list=header}}
    </div>
  </nav>
</header>



<main class="main">
  {{#with info}}
  <div class="info">
    <h1 class="info_title">{{title}}</h1>
    <p class="info_description">{{description}}</p>
  </div>
  {{/with}}

  {{#with form}}

  <form class="form">
    <div class="form_input_list">
      {{#each inputs}}
      <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="{{id}}" />
      {{/each}}
    </div>

    <div class="form_checkbox_block">
      <input type="checkbox" name="{{checkbox.name}}">
      <label>{{checkbox.label}}</label>
    </div>
    <button type="submit" class="form_button">{{button}}</button>
    <p class="form_info">{{info}}</p>
  </form>
  {{/with}}
</main>

<div class="updates">
  {{#with updates}}
  <h1 class="updates_title">{{title}}</h1>

  <div class="list">
    {{#each list}}
    <h1 class="list_nickname">{{nickname}}</h1>
    <p class="list_description">{{description}}</p>
    {{/each}}
  </div>

  {{#with show_all}}
  <a href="{{url}}" class="show_all">{{text}}</a>
  {{/with}}
  {{/with}}
</div>

<div class="main_exprience">
  {{#with expirience}}
  <div class="expirience">
    <strong class="expirience_title">{{title}}</strong>
    <strong class="expirience_badge">{{badge}}</strong>
  </div>
  <div class="main_list">
    {{#each list}}
    <div class="list1">
      <strong class="list_name">{{name}}</strong>
      <p class="list_details">{{details}}</p>
    </div>
    {{/each}}
  </div>
  {{/with}}
</div>

<footer class="row footer">
  <div class="col-3">
    {{> logo}}
    <span class="footer_copiright">Copiright 2023-2024</span>
  </div>
  {{#each footer}}
  <div class="col-3">
    <span class="footer_title">{{title}}</span>
    {{>nav list=links isVertical=true}}
  </div>
  {{/each}}

</footer>