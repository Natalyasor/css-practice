<header class="header row g-0">
  <div class="col-3">
    {{> logo }}
  </div>

  <nav class="header_nav col-9">

    <div class="header-nav-right">
      {{>nav list=header}}
    </div>
  </nav>
</header>



{{#with main}}
<div class="main">
  <div class="main_content">
    <div>
      <h1 class="main_heading">{{heading}}</h1>
      <p class="main_description">{{description}}</p>
      <div class="button">
        <a class="main_button" href="{{href}}">{{button}}</a>
      </div>
    </div>
  </div>
  <img src="{{image}}" class="main_image">
</div>
{{/with}}



<div class="featured">
  {{#each featured}}
  <div class="featured_content">
    <img class="featured_photo" src="{{photo}}">
    <h1 class="featured_heading">{{heading}}</h1>
    <p class="featured_info">{{info}}</p>
    <a class="featured_linkText" url="{{linkUrl}}">{{linkText}}</a>
  </div>
  {{/each}}
</div>


<div class="actions">
  {{#each actions}}
  <div class="actions_content">
    <h1 class="actions_heading">{{heading}}</h1>
    <a class="actions_text" url="{{url}}">{{text}}</a>
  </div>
  {{/each}}
</div>

<footer class="row footer">
  <div class="col-3">
    {{> logo}}
    <span class="footer_copiright">Copiright 2023-2024</span>
  </div>
  {{#each footer}}
  <div class="col-3">
    <span class="footer_title">{{title}}</span>
    {{>nav list=links isVertical=true}}
  </div>
  {{/each}}

</footer>