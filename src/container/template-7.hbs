<header class="header row g-0">


  {{#with header}}
  <div class="nav">
    {{> logo }}
    {{#each links}}

    <div class="header_nav_right">

      <a href="url" class="nav_link">{{text}}</a>
    </div>
    {{/each}}
  </div>
  {{#with ad}}
  <div class="ad">
    <a href="{{url}}" class="nav_ad">{{text}}</a>
    <p class="userOnline">userOnline: 10</p>
  </div>
  {{/with}}
  {{/with}}
  </nav>
</header>

<div class="card">
  {{#with hero}}

  <h1 class="hero_title">{{title}}</h1>
  <p class="hero_description">{{description}}</p>

  {{#with button}}
  <div class="button">
    <button href="{{url}}" class="hero_button">{{text}}</button>
  </div>
  {{/with}}
  {{/with}}
</div>

<div class="about">
  {{#with about}}
  <h1 class="about_heading">{{heading}}</h1>
  <p class="about_info">{{info}}</p>
  {{/with}}
</div>
<div class="main">
  <h1 class="main_articles">Our Articles</h1>
  <button class="main_button">View All</button>
</div>
<main class="articles">
  {{> articleCardDark}}
</main>

<footer class="row footer">

  {{> footerDark}}

</footer>